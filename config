#bindsym $mod+Delete exec "i3-nagbar -m '"B!+cHp|Z"' -t error -b 'Lock' 'i3lock' -b 'Suspend' 'systemctl suspend' -b 'Restart' 'reboot' -b 'Shutdown' 'poweroff'"
#set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
set $mode_system   (e) logout,  (q) suspend,  (r) reboot,  (s) shutdown
mode "$mode_system" {
#    bindsym l exec bash /root/.config/i3/locky.sh, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym q exec --no-startup-id systemctl suspend, mode "default"
#   bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"

    # Back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Delete mode "$mode_system"


